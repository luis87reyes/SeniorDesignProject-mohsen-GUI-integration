<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmpe195.mohsenhosseinikhayat.seniordesignproject">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.PantryAssistantActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.IngredientDetailActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activities.PantryManagerActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activities.RecipeSearchActivity" />
        <activity android:name=".Activities.RecipeDetailActivity"></activity>
    </application>

</manifest>