<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".Fragments.RecipeSearchFragment">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background">


        <fragment
            android:id="@+id/ListViewPantry"
            android:name="com.cmpe195.mohsenhosseinikhayat.seniordesignproject.Fragments.ListViewPantry"
            android:layout_width="wrap_content"
            android:layout_height="470dp"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="163dp" />


        <Button
            android:id="@+id/speechButton"
            android:layout_width="162dp"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="37dp"
            android:layout_marginStart="16dp"
            android:background="#86d0e3"
            android:text="Voice"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/confirmButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/speechButton"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="44dp"
            android:background="@color/pantry_listening_color4"
            android:text="@string/confirm_pantry_manager"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </RelativeLayout>


</FrameLayout>
