<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:id="@+id/card_view"
    android:layout_height="140dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_gravity="center"
    android:layout_marginTop="13dp"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:layout_marginBottom="13dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color">


        <ImageView
            android:id="@+id/ingredientImageView"
            android:layout_width="90dp"
            android:layout_height="81dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/ingredientNameTextView"
            android:layout_gravity="center"
            android:layout_marginStart="23dp"
            android:layout_marginTop="9dp" />


        <TextView
            android:id="@+id/ingredientNameTextView"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAllCaps="false"
            android:textColor="@color/cardview_dark_background"
            android:textSize="26dp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/ingredientQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="65dp"
            android:layout_marginTop="61dp"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingredientMeasurementUnitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/ingredientQuantityTextView"
            android:layout_marginTop="94dp"
            android:text="TextView"
            android:textStyle="bold" />


    </RelativeLayout>


</android.support.v7.widget.CardView>